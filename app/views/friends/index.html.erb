
<% if user_signed_in? %>
<h1>Friends</h1>
<table class="table table-striped table-bordered table-hover">
  <thead class = "table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <!--th colspan="2"></th-->
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <% if friend.user == current_user %>
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add new friend', new_friend_path, class:"btn btn-secondary"%>
<!-- to add a button just add a class followed by btn btn-placeholder. placeholder can be primary, secondary, success, etc-->
<% else %>
<h1>Welcome</h1>
Please sign in to view your <strong> Friends </strong>.
<% end %>

